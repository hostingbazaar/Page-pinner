{
  "manifest_version": 3,
  "name": "URL Extractor",
  "version": "1.0",
  "description": "Extracts the current website URL.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"

  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["asset/js/contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
      "16": "asset/images/icons/icon16.png",
      "48": "asset/images/icons/icon48.png",
      "128": "asset/images/icons/icon128.png"
    }
}
